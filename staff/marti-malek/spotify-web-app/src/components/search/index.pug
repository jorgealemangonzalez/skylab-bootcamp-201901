mixin search
    section(class='search container-fluid col-12')
        form(method='POST', action='/search')
            div(class='input-group form-group')
            div(style="display:flex")
                input(class='form-control col-10', type='text', placeholder='Search your favourite artists...', name='query')
                button(class='btn btn-default', type='submit')
                    i(class='fas fa-search col-2')